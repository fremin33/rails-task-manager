<%= link_to'Ajouter une tâche', new_task_path %>
<h1>Voici la liste des taches à réaliser : </h1>
<% @tasks.each do |task| %>
<ul>
<li><%= link_to(task.name, task_path(id: task.id)) %></li>
<p><%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure ?"} %></p>
</ul>
<% end %>
